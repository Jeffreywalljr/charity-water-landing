  <script>
    // Accessibility helpers + simple donation simulation
    const modal = document.getElementById('modal');
    const openDonate = document.getElementById('open-donate');
    const donateBtn = document.getElementById('donateBtn');
    const closeModal = document.getElementById('closeModal');
    const feedback = document.getElementById('donate-feedback');
    const confirmDonate = document.getElementById('confirmDonate');
    const amounts = document.querySelectorAll('.amounts button');
    const otherInput = document.getElementById('other');

    function showModal(){
      modal.style.display = 'flex';
      modal.setAttribute('aria-hidden','false');
      otherInput.value = '';
      feedback.textContent = '';
      otherInput.focus();
    }
    function hideModal(){
      modal.style.display = 'none';
      modal.setAttribute('aria-hidden','true');
    }

    openDonate.addEventListener('click', showModal);
    donateBtn.addEventListener('click', showModal);
    closeModal.addEventListener('click', hideModal);
    modal.addEventListener('click', (e) => {
      if(e.target === modal) hideModal();
    });

    // preset amount click
    amounts.forEach(btn => {
      btn.addEventListener('click', () => {
        const amt = btn.getAttribute('data-amount');
        otherInput.value = amt;
        otherInput.focus();
      });
    });

    confirmDonate.addEventListener('click', () => {
      const val = parseFloat(otherInput.value || 0);
      if(!val || val <= 0){ feedback.textContent = 'Please enter a valid amount.'; feedback.style.color='#b00020'; otherInput.focus(); return; }
      feedback.style.color = '#0b6623';
      feedback.textContent = `Thanks — your $${val.toFixed(2)} donation is simulated for this demo. (Replace this with a real payments integration.)`;
      // In a real build: submit to server or stripe here.
      // simulate close after 2s
      setTimeout(hideModal, 1700);
    });

    // keyboard accessibility for modal (ESC to close)
    document.addEventListener('keydown', (e) => {
      if(e.key === 'Escape' && modal.style.display === 'flex') hideModal();
    });

    // Ensure hero images have meaningful alt text - reminder for user
    // console.info('Reminder: replace assets/hero.jpg with your hero image (student drinking water).');
  </script>
